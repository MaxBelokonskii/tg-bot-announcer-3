# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_ID=your_admin_telegram_id_here
ADMIN_IDS=additional_admin_ids_comma_separated

# Enhanced Admin Broadcast Configuration
# Enable enhanced broadcast feature with message sequences
ENHANCED_BROADCAST_ENABLED=true

# Message sequence delays (in milliseconds)
DEFAULT_SEQUENCE_DELAY=2000
USER_PROCESSING_DELAY=100
BATCH_PROCESSING_DELAY=1000

# Batch processing settings for enhanced broadcasts
MAX_ENHANCED_USERS_PER_BATCH=10
MAX_CONCURRENT_SEQUENCES=5

# Enhanced broadcast timeouts
ENHANCED_DELIVERY_TIMEOUT=30000
SEQUENCE_TIMEOUT_MS=60000

# Enhanced broadcast sequence configuration
ENHANCED_INCLUDE_USEFUL_INFO=true
ENHANCED_INCLUDE_EVENT_DETAILS=true
ENHANCED_TRIGGER_MENU=true

# Enhanced broadcast retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=1000
USE_EXPONENTIAL_BACKOFF=false

# Enhanced broadcast logging
ENHANCED_DETAILED_LOGS=true
LOG_SEQUENCE_STEPS=true
LOG_USER_ELIGIBILITY=false

# User eligibility criteria for enhanced broadcasts
REQUIRE_FULL_NAME=true
REQUIRE_ATTENDANCE_STATUS=true
MIN_DATA_COMPLETENESS=50
MIN_ELIGIBILITY_SCORE=40

# Performance optimization
ENABLE_MEMORY_OPTIMIZATION=true

# Fallback settings
FALLBACK_TO_STANDARD=true
SKIP_FAILED_USERS=true
CONTINUE_ON_PARTIAL_FAILURE=true

# Username-based Message Delivery Configuration
# Preferred method for sending messages: 'username', 'telegram_id', 'auto'
PREFERRED_SEND_METHOD=auto

# Enable fallback to telegram_id when username resolution fails
ENABLE_FALLBACK_TO_TELEGRAM_ID=true

# Username resolution cache settings
# Cache TTL in milliseconds (default: 300000 = 5 minutes)
USERNAME_RESOLUTION_CACHE_TTL=300000

# Enable username resolution caching
ENABLE_USERNAME_CACHE=true

# Database Configuration
DATABASE_PATH=./database.db

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Message Delivery Rate Limiting
DEFAULT_BATCH_SIZE=25
DEFAULT_DELAY_MS=150
MAX_RETRIES=3